<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>QuestionAnswerServlet</servlet-name>
        <servlet-class>student.servlet.QuestionAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionAnswerServlet</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuizInstructionsServlet</servlet-name>
        <servlet-class>student.servlet.QuizInstructionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuizInstructionsServlet</servlet-name>
        <url-pattern>/instructions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewContentDetailsServlet</servlet-name>
        <servlet-class>content.creator.servlet.ViewContentDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewContentDetailsServlet</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/welcomePage.jsp</welcome-file>
    </welcome-file-list>

</web-app>